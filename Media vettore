 <p> media vettore html</p> <br><br></br>
    <script>
      

var x;
var dati=new Array();
var somma=0;
x=prompt("Quanti lanci vengono effettuati?")
for(var i=0; i<x; i++){
dati[i]=prompt('e metti un numero su!');
somma+=parseFloat(dati[i]);
}
};
if(dati.length){alert(somma/dati.length);}
</script>
